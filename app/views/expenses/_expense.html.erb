<turbo-frame id="<%= dom_id expense %>"  class="table-row even:bg-sky-50">
  <div class="table-cell p-2">
    <%= expense.name %>
  </div>
  <div class="table-cell p-2">
    <%= form_with(model: expense, class: "text-lg inline-block my-3 w-72") do |form| %>
      <%= form.check_box :paid, data: { id: expense.id, action: 'expenses#toggle' },
                         class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
    <% end %>
  </div>
  <div class="table-cell p-2">
    <%= expense.value %>
  </div>
  <div class="table-cell p-2" data-controller='turbo-modal'>
    <%= link_to "Edit", edit_expense_path(expense), data: { turbo_frame: 'modal', action: 'turbo-modal#show' }, class: "btn bg-gray-100" %>
    <div class="inline-block ml-2">
      <%= button_to "Delete", expense_path(expense), method: :delete, data: { "turbo-frame": "_top" }, class: "btn bg-red-100" %>
    </div>
  </div>
</turbo-frame>
